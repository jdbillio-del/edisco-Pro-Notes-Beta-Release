{
  "name": "edisconotes-desktop",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist": "npm run build && electron-builder",
    "preview": "vite preview",
    "lint": "echo 'no lint configured'",
    "test": "echo 'no tests configured'",
    "smoke": "npm run build && node --input-type=module -e \"import { existsSync } from 'node:fs'; if (!existsSync('dist/index.html')) { throw new Error('Smoke check failed: dist/index.html missing after build.'); } console.log('Smoke check passed: dist/index.html exists.');\""
  },
  "dependencies": {
    "docx": "^9.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sql.js": "^1.10.3",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "electron": "35.7.5",
    "electron-builder": "^26.7.0",
    "typescript": "^5.7.3",
    "vite": "^6.4.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.edisco.pronotes",
    "productName": "eDisco Pro Notes",
    "directories": {
      "output": "../../dist"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "resources/icon.icns"
    },
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    }
  }
}
